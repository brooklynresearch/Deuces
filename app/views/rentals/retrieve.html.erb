<div id="idle-watch" data-destination="<%= hub_rentals_url %>" ></div>

<%= image_tag "power_up.png", class: "logo smallest" %>

<% if flash[:notice] %>
  <p class="form-errors"><%= flash[:notice] %></p>
<% end %>

<div id="inner-container">
  <%= form_tag(complete_rentals_path, method: :put, id: "retrieve-rental-form", class: "validate-form") do  %>
    <%= text_field_tag 'rental[last_name]', "", placeholder: "Last Name", class: "text-input line-2 name-input" %>
    <%= text_field_tag 'rental[phone_number]', "", placeholder: "LAST 4 DIGITS OF PHONE #", class: "text-input line-3 phone-input",
        type:"number", min: "0", inputmode:"numeric", pattern:"[0-9]*" %>
    <%= submit_tag "submit", id: "retrieve-submit-button", disabled: true, class: "hidden-submit" %>
  <% end %>
</div>

<div id="button-container">
   <%= link_to "BACK", hub_rentals_path, class: "btn left small" %>
   <label for="retrieve-submit-button" class="btn center large submit-label">RETRIEVE</label>
   <%= image_tag "chase.png", class: "chase-logo"  %>
</div>
