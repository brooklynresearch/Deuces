<div class="idle-watch" data-count="30" data-destination="<%= admin_lockers_url %>"></div>

<%= image_tag "power_up.png", class: "logo smaller" %>

<p class="form-errors">
  <%= flash[:notice] if flash[:notice] %>
</p>

<div id="inner-container">
  <div class="text-box long  <%= device_id_class %>">
    <p>NAME: <%= @rental.last_name %><br>PHONE: <%= @rental.phone_number %></p>
  </div>
</div>

<div id="button-container">
  <% if params["search"] %>
    <%= link_to "BACK", search_admin_rentals_path, class: "btn left small" %>
  <% else %>
    <%= link_to "BACK", admin_lockers_path, class: "btn left small" %>
  <% end %>
  <%= button_to "UNLOCK", retrieve_admin_rental_path(@rental), class: "btn center large green" %>
  <%= image_tag "chase.png", class: "chase-logo"  %>
</div>
