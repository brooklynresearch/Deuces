<div id="admin-locker-index">

<h1>All Lockers</h1>
<h3><%= @occupied_count %> Occupied</h3>
<h3><%= @open_count %> Open</h3>
<% @lockers.each do |locker| %>
  <div class="admin-locker <%= 'occupied' if locker.occupied %>">
    <div class="admin-locker-text">
      <span class="locker-title">Locker #<%= locker.id %>: <%= locker.text_status %></span>
      <% if locker.occupied? %>
        <% current_rental = locker.current_rental %>
        <span class="locker-data"><span class="title">Last Name:</span> <%= current_rental.last_name %></span>
        <span class="locker-data"><span class="title">Phone Number:</span> <%= current_rental.phone_number %></span>
        <span class="locker-data"><span class="title">Unique ID:</span> <%= current_rental.hashed_id %></span>
      <% end %>
    </div>
    <div class="admin-locker-links">
      <% if locker.occupied %>
        <%= button_to "Retrieve Phone", retrieve_admin_locker_path(locker), class: "admin-button" %>
      <% end %>
      <%= link_to "Rental Summary", admin_locker_path(locker), class: "admin-button" %>
    </div>
  </div>
<% end %>


</div>
